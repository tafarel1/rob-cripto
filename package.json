{
  "name": "robo-cripto",
  "version": "1.0.0",
  "description": "Cryptocurrency trading bot with Smart Money Concepts",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run typecheck && npm run lint && cd frontend && npm install && npm run build",
    "vercel-build": "npm run typecheck && npm run lint && cd frontend && npm install && npm run build",
    "start": "cd backend && npm start",
    "lint": "eslint . --ext .js,.ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix --max-warnings=0",
    "typecheck": "npm run typecheck:frontend && npm run typecheck:backend",
    "typecheck:frontend": "npm --prefix frontend run typecheck",
    "typecheck:backend": "tsc --noEmit -p backend/tsconfig.json"
  },
  "dependencies": {
    "babel-plugin-react-dev-locator": "^1.0.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io-client": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.14.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.7",
    "globals": "^15.8.0",
    "typescript-eslint": "^8.13.0",
    "typescript": "^5.6.2"
  }
}
