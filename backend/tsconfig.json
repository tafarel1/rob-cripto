{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types"
    ],
    "baseUrl": "./"
  },
  "include": [
    "api/**/*.ts",
    "types/**/*.d.ts"
  ]
}
